@inherits SSMLBuilder.SSMLPage<RoleShuffle.Application.Games.OneNightUltimateWerewolf.OneNightUltimateWerewolfRound>

<speak>
    <p>
        The night phase starts in
        5<break time='0.3s' />
        4<break time='0.3s' />
        3<break time='0.3s' />
        2<break time='0.3s' />
        1<break time='0.8s' />

        Everybody, close your eyes!
        <break time='5s' />

        @if (Model.RoleSelection.Doppelganger > 0)
        {
            <p>
                Doppelganger, please open your eyes.
                <break time='10s' />

                Doppelganger, please close your eyes.
                <break time='3s' />
            </p>
        }

        @if (Model.RoleSelection.Werewolf > 0)
        {
            <p>
                Werewolves, please open your eyes.
                <break time='10s' />

                Werewolves, please close your eyes.
                <break time='3s' />
            </p>
        }

        @if (Model.RoleSelection.Minion > 0)
        {
            <p>
                Minion, please open your eyes.
                <break time='2s' />

                Werwolves, please extent your thumbs without looking, so the minion can recognise you.
                <break time='7s' />

                Minion, please close your eyes:
                Werwolves, please put back your hands into a natural position.
                <break time='3s' />
            </p>
        }

        @if (Model.RoleSelection.Mason > 0)
        {
            <p>
                Mason, please open your eyes and recognise each other.
                <break time='10s' />

                Mason, please close your eyes.
                <break time='3s' />
            </p>
        }

        @if (Model.RoleSelection.Seer > 0)
        {
            <p>
                Seer, please open your eyes.
                <break time='10s' />

                Seer, please close your eyes.
                <break time='3s' />
            </p>
        }

        @if (Model.RoleSelection.Robber > 0)
        {
            <p>
                Robber, please open your eyes.
                <break time='10s' />

                Robber, please close your eyes.
                <break time='3s' />
            </p>
        }

        @if (Model.RoleSelection.Troublemaker > 0)
        {
            <p>
                Troublemaker, please open your eyes.
                <break time='10s' />

                Troublemaker, please close your eyes.
                <break time='3s' />
            </p>
        }

        @if (Model.RoleSelection.Drunk > 0)
        {
            <p>
                Drunk, please open your eyes.
                <break time='10s' />

                Drunk, please close your eyes.
                <break time='3s' />
            </p>
        }

        @if (Model.RoleSelection.Insomniac > 0)
        {
            <p>
                Insomniac, please open your eyes.
                <break time='10s' />

                Insomniac, please close your eyes.
                <break time='3s' />
            </p>
        }
    
        Everybody awake! The day begins.
    </p>
</speak>