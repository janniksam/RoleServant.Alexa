@inherits SSMLBuilder.SSMLPage<RoleShuffle.Application.Games.SecretHitler.SecretHitlerRound>

<speak>
    <p>
        The role distribution starts in
        5<break time='0.3s' />
        4<break time='0.3s' />
        3<break time='0.3s' />
        2<break time='0.3s' />
        1<break time='0.8s' />

        @if (Model.PlayerAmount == 5 || Model.PlayerAmount == 6)
        {
            <p>
                Everybody, please close your eyes!
                <break time='5s' />

                Hitler and Faschist, please open your eyes and recognis each other in
                3<break time='0.3s' />
                2<break time='0.3s' />
                1<break time='0.3s' />
                now!
                <break time='9s' />

                OK! Hitler and Faschists, please close your eyes now.
                <break time='5s' />
            </p>
        }
        else
        {
            <p>
                Everybody, extend your hand into a fist in front of you!
                <break time='5s'/>

                Everybody, please close your eyes!
                <break time='5s' />

                Faschists, please open your eyes and recognis each other in
                3<break time='0.3s' />
                2<break time='0.3s' />
                1<break time='0.3s' />
                now!
                <break time='8s' />
                
                Hitler, please extend your thumb, so the faschists can identify you.
                <break time='2s'/>

                Faschists, identify Hitler.
                <break time='7s'/>
                
                Faschists, please close your eyes.
                <break time='5s'/>

                Everybody, pull back your hands to your body. Keep your eyes closed!
                <break time='7s' />
            </p>
        }

        Everybody awake! The round begins.
    </p>
</speak>